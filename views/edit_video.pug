extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.edit_video}`, method="post")
            input(type="text", placeholder="Edit title", name="title")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Edit title")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.delete_video}`) Delete video
